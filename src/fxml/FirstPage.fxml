<!-- the FXML File which will be loaded to display the First page-->

<Pane maxHeight="600.0" maxWidth="400.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FirstPageController">
    <children>
      <BorderPane fx:id="fppane" layoutX="2.0" layoutY="1.0" prefHeight="400.0" prefWidth="600.0">
         <center>
            <VBox fx:id="fpvbox" alignment="CENTER" BorderPane.alignment="CENTER_RIGHT">
               <BorderPane.margin>
                  <Insets right="15.0" />
               </BorderPane.margin>
               <children>
                    <Label text="Not App">
                        <font>
                            <Font name="System Bold" size="54.0" />
                        </font>
                     <VBox.margin>
                        <Insets top="-50.0" />
                     </VBox.margin>
                    </Label>
                    <Label contentDisplay="CENTER" text="Compare appliances and see your savings!">
                     <font>
                        <Font size="27.0" />
                     </font>
                     <padding>
                        <Insets bottom="20.0" top="20.0" />
                     </padding></Label>
                    <Button mnemonicParsing="false" onAction="#getStartedButtonClicked" prefHeight="47.0" prefWidth="181.0" text="Get Started!">
